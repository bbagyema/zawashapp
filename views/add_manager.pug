extends layout
block content
    if alert == "success"
        div.alert.alert-success Manager added successfully.
    if alert == "error"
        div.alert.alert-danger An error occurred, failed to add manager.
    form(method="POST" action='/bayoffice/manager')
            div.form-row
                div.col.form-group
                    input.form-control(placeholder='First Name' name="firstname")
            div.form-row
                div.col.form-group
                    input.form-control(placeholder='Last Name' name="lastname")
            div.form-row
                div.col.form-group
                    input.form-control(placeholder='Username' name="username")
            div.form-row
                div.col.form-group
                    input.form-control(placeholder='Password' type="password" name="password")
            div.form-row
                div.col.form-group
                    button.btn.btn-primary.btn-block Add manager
                            