extends layout
block content
    if alert=="success"
        div.alert.alert-success Washer added successfully.
    if alert=="error"
        div.alert.alert-danger An erroroccured, failed to add washer.
    form(method="POST" action='/bayoffice/washer')
        div.form-row
            div.col.form-group 
                input.form-control( placeholder="First Name" name="fname")
            div.col.form-group
                input.form-control(placeholder='Last Name' name='lname')
        div.form-row
            div.col.form-group
                input.form-control( placeholder='Phone Number' name="phone" type='number')
        div.form-row
            div.col.form-group
                input.form-control(placeholder="Date of Birth" name='dob' type='date')
            div.col.form-group
                select.form-control(name="gender")
                    option(value="male") M
                    option(value="female") F
            div.col.form-group
                input.form-control(placeholder="NIN" name="nin" type="number")
            div.form-row
                div.col.form-group
                    input.form-control(placeholder="Place of Residence" name="residence")
            div.form-row
                div.col.form-group
                    button.btn.btn-primary.btn-block Add Washer 
                

                            